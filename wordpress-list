#!/bin/bash
n=0
while IFS='' read -r line || [[ -n "$line" ]]; do
    if [[ $line == *"Host "* ]]; then
        host="${line#Host *}"
        args="--path=/var/www/html"
        ssh -q ${host} "\
		[ -f /usr/local/bin/wp ] \
		&& wp --quiet $args core is-installed \
		|| exit 1" < /dev/null
	echo $?
        ((n++))
    fi
done < ~/.ssh/config


exit 0
