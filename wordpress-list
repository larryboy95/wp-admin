#!/bin/bash
main()
{
	params="-o ConnectTimeout=yy1 -o ConnectionAttempts=1"
	args="--path=/var/www/html"
	while IFS='' read -r line || [[ -n "$line" ]]; do
		if [[ $line == *"Host "* ]]; then
			host="${line#Host *}"
			ssh ${params} -q ${host} "\
				[ -f /usr/local/bin/wp ] \
				&& wp --quiet $args core is-installed \
				|| exit 1" < /dev/null
			if [ $? -eq 0 ]; then
				echo ${host}
			else 
				continue
			fi
			if [ $1 == "-v" ]; then
				version=$(ssh ${params} ${host} "wp ${args} core version")
				echo ${version}
			fi
	    fi
	done < ~/.ssh/config
}
abort()
{
	echo "An error occurred. Exiting..." >&2
	exit 1
}
trap 'abort' 0
set -e

main ${1}

# Trap all errors
trap : 0

exit 0
