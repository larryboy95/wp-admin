#!/bin/sh
if [ -f /usr/local/bin/tweet.sh ]; then
	rm twitter-temp.png
	pageres --crop --filename="twitter-temp" $1 900x2400
	. ~/.tweet.sh.conf
	mid=$(tweet.sh upload twitter-temp.png | jq -r '.media_id_string')
	echo $mid
	rm twitter-temp.png
	tweet.sh post -m $mid "Screenshot of ${1} at 900px wide."
fi
echo $1
exit 0
